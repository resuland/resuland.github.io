---
const today = new Date()
---

<footer>
  <div class="fcontainer">
    <div class="cfot">
      <div>
        &copy; {today.getFullYear()} Valentino Di Giosaffatte
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    @apply w-full;
    @apply text-zinc-500;
  }
  .fcontainer {
    @apply mx-auto;
    @apply max-w-3xl;
  }
  .cfot {
    @apply flex;
    @apply items-center;
    @apply justify-center;
    @apply text-center;
    @apply p-4;
  }
</style>
