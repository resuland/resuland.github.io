---
import HeaderLink from './HeaderLink.astro'
import ThemeToggle from './ThemeToggle'

import { SITE_TITLE } from '../config'
---

<header>
  <div class="hcontainer">
    <nav>
      <div class="navl">
        <a href="/" class="group hover:opacity-80 focus:opacity-50">
          <h2 class="navl-name">
            {SITE_TITLE}
          </h2>
        </a>
        <div class="navl-links">
          <HeaderLink href="/blog">
            <div class="i-ion-social-rss-outline"></div>
            <span class="hidden md:flex">Blog</span>
          </HeaderLink>
          <!-- <HeaderLink href="/music"> -->
          <!--   <div class="i-ion-headset-outline" /> -->
          <!--   <span class="hidden md:flex">Music</span> -->
          <!-- </HeaderLink> -->
        </div>
      </div>
      <div class="navr">
        <ThemeToggle client:visible />
      </div>
    </nav>
  </div>
</header>

<style>
  header {
    @apply fixed;
    @apply w-full;
    @apply z-20;
    @apply backdrop-blur-md;
  }
  .hcontainer {
    @apply mx-auto;
    @apply max-w-3xl;
  }
  nav {
    @apply flex;
    @apply items-center;
    @apply justify-between;
    @apply p-4;
    @apply text-lg;
  }
  .navl {
    @apply flex;
    @apply gap-6;
    @apply items-center;
  }
  .navl-name {
    @apply font-semibold;
    @apply tracking-tighter;
    @apply text-xl;
  }
  .navl-links {
    @apply flex;
    @apply gap-4;
  }
  .navr {
    @apply flex;
    @apply gap-4;
    @apply items-center;
  }
</style>
